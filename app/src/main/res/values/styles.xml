<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //水平分割线

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_half</item>
        <item name="android:background">@color/transparent_10</item>
    </style>

    //竖直分割线

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/margin_half</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent_10</item>
    </style>

    <style name="mask_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 设置有无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    //设置选中字体大小

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    //用户

    <style name="ActionbarTitleStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#F3F3F3</item>
    </style>

    <style name="list_head_item_style">
        <item name="android:background">@drawable/user_personal_info_background</item>
    </style>

    <style name="list_item_style">
        <item name="android:background">@drawable/user_category_background</item>
    </style>

    <style name="ConfigItemImageStyle">
        <item name="android:layout_marginLeft">@dimen/_30px</item>
        <item name="android:layout_marginRight">@dimen/_30px</item>
    </style>

    <style name="ConfigItemTitleStyle">
        <item name="android:textColor">@color/user_white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/_30px</item>
        <item name="android:layout_marginBottom">@dimen/_30px</item>
    </style>

    <style name="ConfigItemDescStyle">
        <item name="android:textColor">@color/config_gray_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginRight">@dimen/_30px</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    //侧边栏

    <style name="SideBar">
        <item name="android:windowEnterAnimation">@anim/anim_sidebar_in</item>
        <item name="android:windowExitAnimation">@anim/anim_sidebar_out</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    //播放页面

    <style name="InvitationFriendsLayoutStyle">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/f6f6f6</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

</resources>
